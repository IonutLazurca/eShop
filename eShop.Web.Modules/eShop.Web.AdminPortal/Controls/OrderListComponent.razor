

@if (Orders != null && Orders.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date placed</th>
                <th>Order Id</th>
                <th>Customer Country</th>
                <th>Customer County</th>
                <th>Customer City</th>
                <th>Customer Name</th>
                <th>Processed by</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Orders)
            {
                <OrderItemComponent Order="item"></OrderItemComponent>

            }
        </tbody>
    </table>
}
else
    {
    <table class="table">
        <thead>
            <tr>
                <th>Date placed</th>
                <th>Order Id</th>
                <th>Customer Country</th>
                <th>Customer County</th>
                <th>Customer City</th>
                <th>Customer Name</th>
                <th>Processed by</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="7">There are no records.</td>
            </tr>        
        </tbody>
    </table>
     }



        @code {
            [Parameter]
            public IEnumerable<Order> Orders { get; set; }



        }
